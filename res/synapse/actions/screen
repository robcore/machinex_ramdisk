if [ ! -z $2 ]
then
  let "R=($((16$2)) & 16711680) >> 16"
  let "G=($((16$2)) & 65280) >> 8"
  let "B=$((16$2)) & 255"
fi
P=/sys/class/mdnie/mdnie

case $1 in
control_black)
  if [ ! -z $2 ]
  then
  echo $2 $2 $2 > $P/$1
  fi
  echo $(cat $P/$1 | busybox awk '{print $1}')
  ;;
control_red)
  ;&
control_green)
  ;&
control_blue)
  ;&
control_cyan)
  ;&
control_magenta)
  ;&
control_yellow)
  ;&
control_white)
  if [ ! -z $2 ]
  then
  echo $R $G $B > $P/$1
  fi
  echo $(busybox printf "#%02X%02X%02X\n" $(cat $P/$1))
  ;;
esac

read() {
    echo $(busybox printf "#%02X%02X%02X" $(cat $P/$1))
}